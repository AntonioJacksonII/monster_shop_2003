<h2>All Orders</h2>

<section id="packaged-orders">
  <h4>Packaged Orders:</h4>
  <% if @sorted_orders["packaged"] %>
    <% @sorted_orders["packaged"].each do |order|%>
      <section id="order-<%=order.id%>">
        <ul>
          <li><%= link_to "User: #{order.name}", "/admin/users/#{order.user_id}" %></li>
          <li>Order Id: <%= order.id %></li>
          <li>Ordered On: <%= order.created_at %></li>
        </ul>
      </section>
    <% end %>
  <% end %>
</section>

