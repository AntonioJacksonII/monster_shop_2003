<h1>Edit Profile for <%= @user.name %></h1>

<%= form_tag "/users/#{@user.id}", method: :patch do |f| %>

<%= label_tag :name %>
<%= text_field_tag :name, nil, value: @user.name %>

<%= label_tag :address %>
<%= text_field_tag :address, nil, value: @user.address %>

<%= label_tag :city %>
<%= text_field_tag :city, nil, value: @user.city %>

<%= label_tag :state %>
<%= text_field_tag :state, nil, value: @user.state %>

<%= label_tag :zip %>
<%= text_field_tag :zip, nil, value: @user.zip %>

<%= label_tag :email %>
<%= text_field_tag :email, nil, value: @user.email %>

<%= label_tag :password %>
<%= password_field_tag :password %>

<%= label_tag :password_confirmation %>
<%= password_field_tag :password_confirmation %>

<%= submit_tag 'Update Profile' %>

<% end %>
