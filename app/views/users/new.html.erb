<h1 align= "center">Register as a User</h1>
<center>
  <%= form_tag '/users' do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name, nil, value: params[:name] %>

    <%= label_tag :address %>
    <%= text_field_tag :address, nil, value: params[:address] %>

    <%= label_tag :city %>
    <%= text_field_tag :city, nil, value: params[:city] %>

    <%= label_tag :state %>
    <%= text_field_tag :state, nil, value: params[:state] %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip, nil, value: params[:zip] %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>

    <%= submit_tag 'Create User' %>
  <% end %>
</center>
